                        <!-- Include proper shhaa config based on selected profile -->
                        <resource>
                            <directory>${war.shhaa.dir}</directory>
                            <targetPath>WEB-INF</targetPath>
                            <includes>
                                <include>shhaa.xml</include>
                            </includes>
                        </resource>
                    </webResources>
                    <!--outputDirectory>bin</outputDirectory-->
                </configuration>
            </plugin>
