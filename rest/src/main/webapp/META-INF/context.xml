<?xml version="1.0" encoding="UTF-8"?>
<Context path="/service">
  <!-- *******
     * VCR *
     ******* -->
  <Resource auth="Container" 
            defaultAutoCommit="false" 
            driverClassName="com.mysql.cj.jdbc.Driver" 
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" 
            maxIdle="4" 
            maxTotal="8" 
            maxWaitMillis="10000" 
            name="jdbc/VirtualCollectionStore" 
            password="vcrpassword" 
            removeAbandonedOnBorrow="true" 
            removeAbandonedOnMaintenance="true" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3307/vcr" 
            username="vcruser" 
            validationQuery="SELECT 1"
            testOnBorrow="true"
  />
  
  <Parameter name="eu.clarin.cmdi.vcr.maintenance.enabled" value="true" />
  
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.admindb.basedir" value="/Users/wilelb/.vcr/conf"/>
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.admindb" value="vcr-admin.conf"/>
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.collectiondisplayname" value="CLARIN Virtual Collection Registry"/>
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.base_uri" override="false" value="http://localhost:8080"/>
  <!-- Configure pid providers configuration -->
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.pidprovider.basedir" override="false" value="/Users/wilelb/.vcr/conf"/>
  <Parameter name="eu.clarin.cmdi.virtualcollectionregistry.pidprovider.configfile" override="false" value="pidproviders.properties"/>
  <!--
        Available profiles:
        - vcr.pid.dummy
        - vcr.pid.gwdg
        - vcr.pid.epic
        - vcr.pid.doi
        - vcr.pid.multi
    -->
  <Parameter name="spring.profiles.active" override="false" value="vcr.pid.multi"/>
  <!-- Switchboard endpoint -->
  <Parameter name="eu.clarin.cmdi.vcr.lrs.endpoint" override="false" value="https://switchboard.clarin.eu/#/xyz"/>
  <!-- Allowed values: "HDL", "DOI", "primary", ... -->
  <Parameter name="eu.clarin.cmdi.vcr.process.prefered_pid_type" override="false" value="HDL"/>
  <!-- Download endpoint -->
  <Parameter name="eu.clarin.cmdi.vcr.download.endpoint" override="false" value="https://weblicht.sfs.uni-tuebingen.de/CMDIExplorer/#/vcr"/>
  <Parameter name="eu.clarin.cmdi.vcr.download.enable_for_collections" override="false" value="false"/>
  <!-- Allowed values: "HDL", "DOI", "primary", ... -->
  <Parameter name="eu.clarin.cmdi.vcr.download.prefered_pid_type" override="false" value="HDL"/>
  <!-- Enable switchboard ingegration for resources -->
  <Parameter name="eu.clarin.cmdi.vcr.lrs.enable_for_resources" override="false" value="true"/>
  <!-- Enable switchboard ingegration for collections -->
  <Parameter name="eu.clarin.cmdi.vcr.lrs.enable_for_collections" override="false" value="true"/>
  <!--
    <Parameter name="eu.clarin.cmdi.vcr.piwik.enableTracker" 
               value="false" 
               override="false"/>
    
    <Parameter name="eu.clarin.cmdi.vcr.piwik.siteId" 
               value="1" 
               override="false" />
    
    <Parameter name="eu.clarin.cmdi.vcr.piwik.host" 
               value="https://stats.clarin.eu/" 
               override="false" />
       
     <Parameter name="eu.clarin.cmdi.vcr.piwik.domains" 
               value="*.vcr.clarin.eu" 
               override="false" />   
    -->
    <Parameter name="eu.clarin.cmdi.vcr.logout_mode" override="false" value="shibboleth"/>
    <Parameter name="eu.clarin.cmdi.vcr.logout_enable" override="false" value="false"/>
    <Parameter name="eu.clarin.cmdi.vcr.snippet.survey" override="false" value="survey.html"/>
    <Parameter name="eu.clarin.cmdi.vcr.snippet.credits" override="false" value="credits.html"/>
    <Parameter name="eu.clarin.cmdi.vcr.mode" override="false" value="alpha"/>
    <Parameter name="eu.clarin.cmdi.vcr.forking.enabled" override="false" value="true"/>
    
    <!-- 1.8.0 -->
    <Parameter name="eu.clarin.cmdi.vcr.reference_scanning.enabled" override="false" value="true"/>
  
    <!-- snapshot -->
    <Parameter name="eu.clarin.cmdi.vcr.reference_examples" value="true" override="false" />
    <Parameter name="eu.clarin.cmdi.vcr.parser.mscr.enabled" value="true" override="false" />
    <Parameter name="eu.clarin.cmdi.vcr.parser.dog.enabled" value="false" override="false" />
    <Parameter name="eu.clarin.cmdi.vcr.parser.cmdi.enabled" value="true" override="false" />
</Context>
