    <build>
        <resources>            
            <resource>
                <filtering>false</filtering>
                <directory>src/main/validation</directory>
                <includes>
                    <include>**/*.xsd</include>
                </includes>
            </resource>
        </resources>
        
        <plugins>
           <!-- Compile jaxb model class -->
            <plugin>                
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>                
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <packageName>eu.clarin.cmdi.virtualcollectionregistry.model.collection.cmdi</packageName>
                    <sources>
                        <!--source> ${basedir}/src/main/java/eu/clarin/cmdi/virtualcollectionregistry/service/impl/VirtualCollection.xsd</source-->
                    </sources>
                </configuration>
            </plugin>
            
            <!-- Make sure the generated sources are included -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/jaxb</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
